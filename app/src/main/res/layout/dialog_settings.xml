<?xml version="1.0" encoding="utf-8"?>

<app:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@drawable/background_with_shadow"
    app:layout_constraintTop_toTopOf="parent"
    android:shadowDx="5"
    android:shadowDy="4"
    android:shadowRadius="2"
    android:padding="12dp"
    android:shadowColor="@color/default_color_primary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/settingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_action_settings"
        android:paddingHorizontal="@dimen/turns_text_padding_horizontal"
        android:paddingBottom="@dimen/turns_text_padding_bottom"
        android:shadowRadius="3"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowColor="@color/text_shadow_color"
        android:textColor="@color/about_game_title_text"
        android:textAlignment="center"
        android:textSize="@dimen/about_game_text_size" />


    <TextView
        android:id="@+id/cardFaceStyleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_face_style_settings"
        android:paddingHorizontal="@dimen/turns_text_padding_horizontal"
        android:paddingTop="@dimen/version_padding_top"
        android:paddingBottom="@dimen/version_padding_bottom"
        android:shadowRadius="3"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowColor="@color/text_shadow_color"
        android:textColor="@color/about_game_title_text"
        android:textAlignment="center"
        android:textSize="@dimen/version_text_size" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/standardCardFaceSetting"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:background="@drawable/card_diamonds_king_2"
            android:contentDescription="@string/card_face_standard_option_description" />


        <ImageButton
            android:id="@+id/simpleCardFaceSetting"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:background="@drawable/card_diamonds_king_mirror"
            android:contentDescription="@string/card_face_simple_option_description" />
    </LinearLayout>

    <Button
        android:id="@+id/dismissSettingsButton"
        android:textColor="@color/button_text"
        android:layout_width="match_parent"
        android:text="@android:string/ok"
        android:paddingHorizontal="@dimen/about_game_ok_button_horizontal_padding"
        android:layout_height="wrap_content"/>
</app:LinearLayout>