<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsLayout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_280sdp"
    android:layout_gravity="center"
    android:background="@drawable/background_with_shadow"
    android:shadowDx="5"
    android:shadowDy="4"
    android:shadowRadius="2"
    android:padding="@dimen/_12sdp"
    android:shadowColor="@color/default_color_primary">


    <TextView
        android:id="@+id/settingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_action_settings"
        android:paddingHorizontal="@dimen/_18sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:shadowRadius="3"
        android:shadowDy="3"
        android:shadowDx="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:shadowColor="@color/text_shadow_color"
        android:textColor="@color/setting_title_text"

        android:textAlignment="center"
        android:textSize="@dimen/about_game_text_size" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        app:layout_constraintTop_toBottomOf="@+id/settingsTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/settings_list_section"
                android:id="@+id/cardFacesSettingInclude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include layout="@layout/settings_list_section"
                android:id="@+id/cardBacksSettingInclude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <include layout="@layout/settings_list_section"
                android:id="@+id/backgroundsSettingInclude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>